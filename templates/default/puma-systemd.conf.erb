[Unit]
Description=Puma Rails Server
After=network.target

[Service]
Type=simple
User=deploy
WorkingDirectory=/srv/<%= @app_name %>/current
Environment=RAILS_ENV=production
Environment=RBENV_ROOT=/usr/local/rbenv
EnvironmentFile=/srv/<%= @app_name %>/shared/.rbenv-vars
ExecStart=/usr/local/rbenv/bin/rbenv exec bundle exec puma -C /srv/<%= @app_name %>/current/config/puma.rb -b unix:///srv/<%= @app_name %>/shared/tmp/sockets/puma.sock
ExecStop=/usr/local/rbenv/bin/rbenv exec bundle exec pumactl -S /srv/<%= @app_name %>/shared/tmp/pids/puma.state stop
TimeoutSec=15
Restart=always

[Install]
WantedBy=multi-user.target
